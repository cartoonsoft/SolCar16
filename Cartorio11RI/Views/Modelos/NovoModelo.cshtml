@model Cartorio11RI.ViewModels.ModeloDocxViewModel

@{
	ViewBag.Title = ViewContext.RouteData.Values["controller"];
	ViewBag.SubTitle = "Novo"; // ViewContext.RouteData.Values["action"];
}

@section styles_especific {
	<style>
		/* coloque aqui seu codigo css */
		.div-container-scroll {
			width: 480px;
			height: 480px;
			overflow-y: auto;
			overflow-x: auto;
		}
	</style>
}

<!-- MAIN CONTENT -->
<div id="content">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
			<h1 class="page-title txt-color-blueDark">
				<i class="fa fa-file-word-o fa-fw "></i>
				@ViewBag.Title
				<span>
					>
					@ViewBag.SubTitle
				</span>
			</h1>
		</div>
	</div>

	<!-- widget grid -->
	<section id="widget-grid" class="">

		<!-- row -->
		<div class="row">

			<!-- NEW WIDGET START -->
			<article class="col-sm-12 col-md-12 col-lg-12">

				<!-- Widget ID (each widget will need unique ID)-->
				<div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">

					<header>
						<span class="widget-icon"> <i class="fa fa-file-word-o"></i> </span>
						<h2>Novo modelo de documento</h2>

					</header>

					<!-- widget div-->
					<div>

						<!-- widget edit box -->
						<div class="jarviswidget-editbox">
							<!-- This area used as dropdown edit box -->

						</div>
						<!-- end widget edit box -->
						<!-- widget content -->
						<div class="widget-body">
							@using (Html.BeginForm("NovoModelo", "Modelos", FormMethod.Post, new { id = "frm-cadastro-modelo-docx", enctype = "multipart/form-data", @class = "smart-form" }))
							{
								@Html.Partial("_frmModeloDocx", Model)
							}
							</div>
						<!-- end widget content -->

					</div>
					<!-- end widget div -->

				</div>
				<!-- end widget -->
			</article>
			<!-- WIDGET END -->

		</div>
		<!-- end row -->
		<!-- div para mostrar menssagens de resultado de CRUD  -->
		<div class="row">
			<article class="col-sm-12 col-md-12 col-lg-10" id="articleMesssagensCrud"></article>
		</div>

	</section>
	<!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->

@section pagespecific{

	<script src="~/Scripts/cartoonsoft/cartoonsoft_libs.js"></script>
	<script src="~/Scripts/cartoonsoft/cartoonsoft_jquery_libs.js"></script>
	<script src="~/Scripts/cartoonsoft/Modelos/crud_modelo.js"></script>

	<script type="text/javascript">

		$(document).ready(function () {

			//

		});

	</script>
}
