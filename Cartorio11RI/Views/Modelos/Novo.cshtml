@model Cartorio11RI.ViewModels.ModeloDocxViewModel

@{
    ViewBag.Title = "Modelos";
    ViewBag.SubTitle = "Novo";
}

@section styles_especific {
    <style>
        /* coloque aqui seu codigo css */
    </style>
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-file-word-o fa-fw "></i>
                @ViewBag.Title
                <span>
                    >
                    @ViewBag.SubTitle
                </span>
            </h1>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!--
    <div class="well">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search...">
            <div class="input-group-btn">
                <button class="btn btn-default btn-primary" type="button">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>
    -->
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

                -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-file-word-o"></i> </span>
                        <h2>Novo modelo de documento</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @using (Html.BeginForm("Novo", "Modelos", FormMethod.Post, new { id = "frmNovoModelo", enctype = "multipart/form-data", @class = "smart-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationBootstrap()
                                @Html.HiddenFor(model => model.Id)

                                <input type="hidden" id="IpLocal" name="IpLocal" value="">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            @Html.LabelFor(model => model.NomeModelo)
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.NomeModelo, null, new { @class = "form-control", @placeholder = "Digite o nome do modelo" })
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            @Html.LabelFor(model => model.IdTipoAto)
                                            <label class="input">
                                                @Html.DropDownListFor(model => model.IdTipoAto, (ViewBag.listaTipoAto as SelectList), new { @class = "form-control" })
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            @Html.LabelFor(model => model.Files)
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.Files, null, new { @type = "file", @accept = "docx", @name = "file", @class = "form-control" })
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" id="btnSalvarModelo" class="btn btn-primary btn-lg">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        Salvar
                                    </button>
                                    @Html.ActionLink("Voltar", "Index", "Modelos", null, new { @class = "btn btn-default btn-lg" })
                                </footer>
                            }
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->

        <!-- div para mostrar menssagens de resultado de CRUD  -->
        <div class="row" >
            <article class="col-sm-12 col-md-12 col-lg-10" id="articleMesssagensCrud"></article>
        </div>

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->

@section pagespecific{
    <script src="~/Scripts/cartoonsoft/cartoonsoft_libs.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            //obter ip local
            var ipLocal = getUserIP(function (ip) {
                var t = navigator.product;
                $("#IpLocal").val(ip);
            });

            //validate
            var $frmNovoModelo = $("#frmNovoModelo").validate({
                // Rules for form validation
                rules: {
                    NomeModelo: {
                        required: true
                    },
                    Files: {
                        RequiredHttpPostedFileBase: true,
                        IsWordFile: true
                    }
                },

                // Messages for form validation
                messages: {
                    NomeModelo: {
                        required: "Digite um nome para o modelo"
                    },

                    Files: {
                        RequiredHttpPostedFileBase: "è necessário anexar uma arquivo Docx",
                        IsWordFile: "Arquivo tem que ser do tipo Docx"
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }

            });

            var ControllerModelValid = ("@ViewBag.ControllerModelValid" == "true");
            var success = ("@ViewBag.success" == "true");
            var msg = "@ViewBag.msg";
            var divMsg = $("#articleMesssagensCrud");

            if (ControllerModelValid) {
                if (success) {
                    ShowMessageCrud(divMsg, "Modelo salvo com sucesso", msg, true);
                } else {
                    ShowMessageCrud(divMsg, "Não foi possível salvar", msg, false);
                }
            }

        });

    </script>
}
