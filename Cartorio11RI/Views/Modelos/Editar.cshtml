@model Cartorio11RI.ViewModels.ModeloDocxViewModel

@{
    ViewBag.Title = "Modelos";
    ViewBag.SubTitle = "Editar";
}

@section styles_especific {
    <style>
        /*coloque aqui seu codigo css*/
    </style>
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-pencil-square-o fa-fw "></i>
                @ViewBag.Title
                <span>
                    >
                    @ViewBag.SubTitle
                </span>
            </h1>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-8">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-collapsed="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="false"
                    data-widget-sortable="false"
                    -->

                    <header>
                        <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                        <h2>Editar modelos de documentos</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->

                        <div class="widget-body no-padding">
                            @using (Html.BeginForm("Editar", "Modelos", FormMethod.Post, new { id = "frmEditarArquivo", enctype = "multipart/form-data", @class = "smart-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationBootstrap()
                                @Html.HiddenFor(model => model.CaminhoEArquivo)
                                @Html.HiddenFor(model => model.NomeModelo)
                                @Html.HiddenFor(model => model.IdTipoAto)
                                @Html.HiddenFor(model => model.Id)

                                <input type="hidden" id="IpLocal" name="IpLocal" value="">
                                
                                <header>
                                    <h1>
                                        Edição de Modelos |
                                        <a id="btnDownload"

                                           href="@Url.Action("DownloadFile","Modelos", new { Id = Model.Id} )" class="fa-link">
                                            <i class="glyphicon glyphicon-download"></i>
                                            <span>
                                                <strong>Download  </strong>
                                            </span>
                                        </a>
                                    </h1>
                                </header>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="col-form-label">Selecione o novo modelo</label>
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.Files, null, new { @type = "file", @accept = "docx", @name = "file", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Files, null, new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>
                                    <!-- SELECAO DE ARQUIVO-->
                                    <span class="text-danger flutua-direita"> Faça o download antes de atualizar </span>
                                </fieldset>
                                <footer>
                                    <button type="submit" id="btnSbmitFrmEditarArquivo" class="btn btn-primary btn-lg">
                                        <i class="glyphicon glyphicon-floppy-disk"></i>
                                        Salvar
                                    </button>
                                    <a href="@Url.Action("Index", "Modelos")" class="btn btn-default btn-lg" title="Voltar">
                                        <i class="fa fa-angle-left" aria-hidden="true"></i> Voltar
                                    </a>
                                </footer>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section pagespecific{

    <script src="~/Scripts/cartoonsoft/cartoonsoft_libs.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            //obter ip local
            var ipLocal = getUserIP(function (ip) {
                var t = navigator.product;
                $("#IpLocal").val(ip);
            });

            var id = $("#Id").val();
            //$('#btnDownload').attr("href", '/Modelos/DownloadFile/' + id + '?Ip="' + $("#IpLocal").val() + '"');
        });

    </script>
}
