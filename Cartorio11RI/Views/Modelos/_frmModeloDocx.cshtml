@model Cartorio11RI.ViewModels.ModeloDocxViewModel

@Html.AntiForgeryToken()
@Html.ValidationBootstrap()
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.IdCtaAcessoSist)
@Html.HiddenFor(model => model.IdTipoAto)
@Html.HiddenFor(model => model.IpLocal)

<fieldset>
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				@Html.LabelFor(model => model.IdTipoAto)
				<select id="sel-tipo-ato-modelo" class="form-control selectpicker">
					@foreach (var item in ViewBag.listaTipoAto)
					{
						<optgroup label="@item.Descricao">
							<option hidden>Selecione um tipo...</option>
							@if (item.ListaTipoAtosFihos.Count > 0)
							{
								foreach (var item2 in item.ListaTipoAtosFihos)
								{
									<option value="@item2.Id" @(item2.Id ==  Model.IdTipoAto ? "selected": "")>@item2.Descricao</option>
								}
							}
						</optgroup>
					}
				</select>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				@Html.LabelFor(model => model.Descricao)
				@Html.TextBoxFor(model => model.Descricao, null, new { @class = "form-control", @placeholder = "Digite a descrição do modelo" })
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<label>Campo</label>
				<div class="input-group">
					<select id="sel-campo-tipo-ato-modelo" class="form-control">
					</select>
					<div class="input-group-btn">
						<button class="btn btn-info" type="button">
							Inserir
						</button>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-group">
				@Html.LabelFor(model => model.DataAlteracao, new { @class = "control-label" })
				@Html.EditorFor(model => model.DataAlteracao, new { htmlAttributes = new { @type = "text", @class = "form-control", @readonly = "readonly" } })
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-9">
			@Html.TextAreaFor(model => model.Texto, new { @id = "ckeditor-modelo-ato", @name = "ckeditor-modelo-ato", @class = "form-control", @placeholder="Texto do modelo", @cols = 160, @rows = 20 })
		</div>
		<div class="col-md-3">
			@Html.TextAreaFor(model => model.Texto, new { @id = "tx-area-orientacao-modelo-ato", @name = "tx-area-orientacao-modelo-ato", @class = "form-control", @placeholder = "Orientações sobre o modelo", @rows = 12 })
		</div>
	</div>
</fieldset>
<div class="form-actions">
	<button type="submit" id="btnSalvarModelo" class="btn btn-primary btn-lg">
		<i class="glyphicon glyphicon-upload"></i>
		Salvar
	</button>
	@Html.ActionLink("Voltar", "IndexModelo", "Modelos", null, new { @class = "btn btn-default btn-lg" })
</div>


