@model Cartorio11RI.ViewModels.AtoViewModel

@{
    ViewBag.Title = "Atos";
    ViewBag.SubTitle = "Novo ato";
}

@section styles_especific {
    <style>
        /*coloque aqui seu codigo css*/
    </style>
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-pencil-square-o fa-fw "></i>
                @ViewBag.Title
                <span>
                    >
                    @ViewBag.SubTitle
                </span>
            </h1>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-collapsed="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="false"
                    data-widget-sortable="false"
                    -->

                    <header>
                        <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                        <h2>Novo ato</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body fuelux">
                            <div class="row padding-5">
                                <div class="wizard" id="divWizardEtapas">
                                    <ul class="steps">
                                        <li data-target="#step1" class="active">
                                            <span class="badge badge-info">1</span>Selecionar imóvel<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step2">
                                            <span class="badge">2</span>Selecionar Pessoas<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step3">
                                            <span class="badge">3</span>Selecionar modelo<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step4">
                                            <span class="badge">4</span>Escrita<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step5">
                                            <span class="badge">5</span>Confirmação<span class="chevron"></span>
                                        </li>
                                    </ul>
                                    <div class="actions">
                                        <button type="button" class="btn btn-sm btn-primary btn-prev" id="btn-voltar">
                                            <i class="fa fa-arrow-left"></i>Voltar
                                        </button>
                                        <button type="button" class="btn btn-sm btn-success btn-next" id="btn-proximo" data-last="Finalizar">
                                            Próximo<i class="fa fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="step-content">
                                    <form id="frm-wizard-ato" method="post">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.IdCtaAcessoSist)
                                        @Html.HiddenFor(model => model.PREIMO.SUBD)
                                        @Html.HiddenFor(model => model.PREIMO.TIPO)
                                        @Html.HiddenFor(model => model.PREIMO.TITULO)

                                        <!-- passo 1------------------------ -->
                                        <div class="step-pane active" id="step1">
                                            <h3><strong>Etapa 1 </strong> - Selecionar o imóvel</h3>
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.PREIMO.SEQPRE)
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-folder-close"></i></span>
                                                        <div class="icon-addon addon-md">
                                                            @Html.TextBoxFor(model => model.PREIMO.SEQPRE, new { @class = "form-control somente-numero-sem-decimal", placeholder = "Núm. prenotação" })
                                                            <label for="PREIMO_SEQPRE" class="glyphicon glyphicon-search" rel="tooltip" title="Número de prenotação"></label>
                                                        </div>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-primary" id="btn-pesq-prenotacao">Pesquisar</button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.PREIMO.MATRI)
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                                        <div class="icon-addon addon-md">
                                                            @Html.TextBoxFor(model => model.PREIMO.MATRI, new { @class = "form-control somente-numero-sem-decimal", placeholder = "Núm. matrícula" })
                                                            <label for="PREIMO_MATRI" class="glyphicon glyphicon-search" rel="tooltip" title="Número de matricula do imóvel"></label>
                                                        </div>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-primary" id="btn-pesq-matricula">Pesquisar</button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr class="simple" />

                                            <!-- Widget ID (each widget will need unique ID)-->
                                            <div class="jarviswidget" id="wid-id-2" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-sortable="false">

                                                <header>
                                                    <span class="widget-icon"> <i class="fa fa-home"></i> </span>
                                                    <h2>Dados do imóvel</h2>

                                                </header>

                                                <!-- widget div ------------ -->
                                                <div>
                                                    <!-- widget edit box --- -->
                                                    <div class="jarviswidget-editbox">
                                                        <!-- This area used as dropdown edit box -->

                                                    </div>
                                                    <!-- end widget edit box -->
                                                    <!-- widget content ---- -->
                                                    <div class="widget-body">

                                                        <div class="row">
                                                            <div class="col-sm-10">
                                                                @Html.LabelFor(model => model.PREIMO.ENDER)
                                                                @Html.TextBoxFor(model => model.PREIMO.ENDER, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.NUM)
                                                                @Html.TextBoxFor(model => model.PREIMO.NUM, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="row"><hr /></div>
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.APTO)
                                                                @Html.TextBoxFor(model => model.PREIMO.APTO, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.BLOCO)
                                                                @Html.TextBoxFor(model => model.PREIMO.BLOCO, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.EDIF)
                                                                @Html.TextBoxFor(model => model.PREIMO.EDIF, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.LOTE)
                                                                @Html.TextBoxFor(model => model.PREIMO.EDIF, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.QUADRA)
                                                                @Html.TextBoxFor(model => model.PREIMO.QUADRA, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.OUTROS)
                                                                @Html.TextBoxFor(model => model.PREIMO.OUTROS, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="row"><hr /></div>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                @Html.LabelFor(model => model.PREIMO.VAGA)
                                                                @Html.TextBoxFor(model => model.PREIMO.VAGA, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>

                                                        </div>

                                                    </div>
                                                    <!-- end widget content- -->

                                                </div>
                                                <!-- end widget div -------- -->

                                            </div>
                                            <!-- end widget ---------------- -->

                                        </div>

                                        <!-- passo 2------------------------ -->
                                        <div class="step-pane" id="step2">
                                            <h3><strong>Etapa 2 </strong> - Selecionar pessoas</h3>
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <label>Selecionar outorgante(s)/outorgado(s)</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-primary btn-lg" id="btn-pesq-pessoas">     selecionar     </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <table id="tblPessoas" class="table table-condensed">
                                                        <thead>
                                                            <tr>
                                                                <th class="col-md-1">Tipo</th>
                                                                <th class="col-md-2">Nome</th>
                                                                <th class="col-md-2">Endereço</th>
                                                                <th class="col-md-1">N.° Documento</th>
                                                                <th class="col-md-1">Tipo Documento</th>
                                                                <th class="col-md-1">Bairro</th>
                                                                <th class="col-md-1">Cidade</th>
                                                                <th class="col-md-1">UF</th>
                                                                <th class="col-md-1">CEP</th>
                                                                <th class="col-md-1">Telefone</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <!-- APPEND JSON-->
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- passo 3--------------------------->
                                        <div class="step-pane" id="step3">
                                            <h3><strong>Step 3 </strong> - Wizard continued</h3>
                                            <br>
                                            <br>
                                            <h1 class="text-center text-primary"> This will be your Step 3 </h1>
                                            <br>
                                            <br>
                                            <br>
                                            <br>
                                        </div>

                                        <!-- passo 4--------------------------->
                                        <div class="step-pane" id="step4">
                                            <h3><strong>Step 4 </strong> - Wizard continued...</h3>
                                            <br>
                                            <br>
                                            <h1 class="text-center text-danger"> This will be your Step 4 </h1>
                                            <br>
                                            <br>
                                            <br>
                                            <br>
                                        </div>

                                        <!-- passo 5--------------------------->
                                        <div class="step-pane" id="step5">
                                            <h3><strong>Step 5 </strong> - Finalizar!</h3>
                                            <br>
                                            <br>
                                            <h1 class="text-center text-success">
                                                <i class="fa fa-check"></i> Congratulations!
                                                <br>
                                                <small>Click finish to end wizard</small>
                                            </h1>
                                            <br>
                                            <br>
                                            <br>
                                            <br>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<!-- ----------------------------------------------------------------------- -->
<div class="modal fade" id="div-dlg-pessoas" role="dialog" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title"><label id="lbl-dlg-pessoa-header"></label></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <table class="table table-striped" id="tbl-selecao-pessoas"> 
                        <thead>
                            <tr>
                                <th style="width:20px"></th>
                                <th style="width:50px">Tipo</th>
                                <th style="width:80px">DOC</th>
                                <th style="width:200px">Nome</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="checkbox">
                                </td>

                            </tr>
                            <!-- APPEND JSON-->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="btn-dlg-pessoas-ok">
                    <i class="glyphicon glyphicon-ok"></i> Ok
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@section pagespecific{
    <script src="~/Scripts/cartoonsoft/cartoonsoft_libs.js"></script>
    <script src="~/scripts/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="~/scripts/plugin/fuelux/wizard/wizard.min.js"></script>
    <script src="~/Scripts/cartoonsoft/Atos/novo.js"></script>
}
