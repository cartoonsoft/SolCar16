                            <div class="row padding-5">
                                <div class="wizard" id="divWizardEtapas">
                                    <ul class="steps">
                                        <li data-target="#step1" class="active">
                                            <span class="badge badge-info">1</span>Selecionar imóvel<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step2">
                                            <span class="badge">2</span>Selecionar modelo<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step3">
                                            <span class="badge">3</span>Selecionar pessoas<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step4">
                                            <span class="badge">4</span>Escrita<span class="chevron"></span>
                                        </li>
                                        <li data-target="#step5">
                                            <span class="badge">5</span>Confirmação<span class="chevron"></span>
                                        </li>
                                    </ul>
                                    <div class="actions">
                                        <button type="button" class="btn btn-sm btn-primary btn-prev" id="btn-voltar">
                                            <i class="fa fa-arrow-left"></i>Voltar
                                        </button>
                                        <button type="button" class="btn btn-sm btn-success btn-next" id="btn-proximo" data-last="Finalizar">
                                            Próximo<i class="fa fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="step-content">
                                    <form id="frm-wizard-ato" method="post">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.IdCtaAcessoSist)
                                        @Html.HiddenFor(model => model.IdPrenotacao)
                                        @Html.HiddenFor(model => model.IdTipoAto)
                                        @Html.HiddenFor(model => model.PREIMO.SUBD)
                                        @Html.HiddenFor(model => model.PREIMO.TIPO)
                                        @Html.HiddenFor(model => model.PREIMO.TITULO)

                                        <!-- passo 1 ---------------------------------------------------------------------------------------------------------->
                                        <div class="step-pane active" id="step1">
                                            <h3><strong>Etapa 1 </strong> - Selecionar o imóvel</h3>
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.IdLivro)
                                                    @Html.DropDownListFor(model => model.IdLivro, (ViewBag.listaLivro as SelectList), new { @id = "ddListLivro", @class = "form-control" })
                                                </div>
                                            </div>
                                            <hr class="simple" />
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.PREIMO.SEQPRE)
                                                    <div class="input-group">
                                                        <span class="input-group-addon dropdown"><i class="glyphicon glyphicon-folder-close"></i></span>
                                                        <div class="icon-addon addon-md">
                                                            @Html.TextBoxFor(model => model.PREIMO.SEQPRE, new { @class = "form-control somente-numero-sem-decimal", placeholder = "Núm. prenotação" })
                                                            <label for="PREIMO_SEQPRE" class="glyphicon glyphicon-search" rel="tooltip" title="Número de prenotação"></label>
                                                        </div>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-primary" id="btn-pesq-prenotacao">Pesquisar</button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.PREIMO.MATRI)
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                                        <div class="icon-addon addon-md">
                                                            @Html.TextBoxFor(model => model.PREIMO.MATRI, new { @class = "form-control somente-numero-sem-decimal", placeholder = "Núm. matrícula" })
