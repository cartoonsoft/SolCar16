                                                <header>
                                                    <span class="widget-icon"> <i class="fa fa-home"></i> </span>
                                                    <h2>Dados do imóvel</h2>

                                                </header>

                                                <!-- widget div ------------ -->
                                                <div>
                                                    <!-- widget edit box --- -->
                                                    <div class="jarviswidget-editbox">
                                                        <!-- This area used as dropdown edit box -->
                                                    </div>
                                                    <!-- end widget edit box -->

                                                    <!-- widget content ---- -->
                                                    <div class="widget-body">
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                @Html.LabelFor(model => model.PREIMO.ENDER)
                                                                @Html.TextBoxFor(model => model.PREIMO.ENDER, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-10">
                                                                @Html.LabelFor(model => model.PREIMO.ENDER)
                                                                @Html.TextBoxFor(model => model.PREIMO.ENDER, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.NUM)
                                                                @Html.TextBoxFor(model => model.PREIMO.NUM, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="row"><hr /></div>
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.APTO)
                                                                @Html.TextBoxFor(model => model.PREIMO.APTO, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.BLOCO)
                                                                @Html.TextBoxFor(model => model.PREIMO.BLOCO, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.EDIF)
                                                                @Html.TextBoxFor(model => model.PREIMO.EDIF, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.LOTE)
                                                                @Html.TextBoxFor(model => model.PREIMO.EDIF, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.QUADRA)
                                                                @Html.TextBoxFor(model => model.PREIMO.QUADRA, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                            <div class="col-sm-2">
                                                                @Html.LabelFor(model => model.PREIMO.OUTROS)
                                                                @Html.TextBoxFor(model => model.PREIMO.OUTROS, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="row"><hr /></div>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                @Html.LabelFor(model => model.PREIMO.VAGA)
                                                                @Html.TextBoxFor(model => model.PREIMO.VAGA, new { @class = "form-control", @readonly = "readonly" })
                                                            </div>

                                                        </div>

                                                    </div>
                                                    <!-- end widget content- -->

                                                </div>
                                                <!-- end widget div -------- -->

                                            </div>
                                            <!-- end widget ---------------- -->

                                        </div>

                                        <!-- passo 2----------------------------------------------------------------------------------------------------------->
                                        <div class="step-pane" id="step2">
                                            <h3><strong>Etapa 2</strong> - Selecioar um modelo</h3>
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => model.IdTipoAto)
                                                    @Html.DropDownListFor(model => model.IdTipoAto, (ViewBag.listaTipoAto as SelectList), new { @id = "ddListTipoAto", @class = "form-control", @onchange = "OnChangeDdListTipoAto(this);" })
                                                </div>
                                                <div class="col-sm-8">
                                                    @Html.LabelFor(model => model.IdModeloDoc)
                                                    @Html.DropDownListFor(model => model.IdModeloDoc, (ViewBag.listaModelosDocx as SelectList), new { @id = "ddListModelodocx", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="row">
                                            </div>
                                            <div class="row">

                                            </div>
                                        </div>

                                        <!-- passo 3----------------------------------------------------------------------------------------------------------->
                                        <div class="step-pane" id="step3">
                                            <h3><strong>Etapa 3 </strong> - Selecionar pessoas</h3>
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <label>Selecionar outorgante(s)/outorgado(s)</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-primary btn-lg" id="btn-pesq-pessoas">     selecionar     </button>
                                                        </span>
                                                    </div>
                                                </div>
