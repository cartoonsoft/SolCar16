@model Cartorio11RI.ViewModels.AtoViewModel

<div class="widget-body fuelux">
    <div class="row padding-5">
        <div class="wizard" id="divWizardEtapas">
            <ul class="steps">
                <li data-target="#step1" class="active">
                    <span class="badge badge-info">1</span>Selecionar imóvel<span class="chevron"></span>
                </li>
                <li data-target="#step2">
                    <span class="badge">2</span>Selecionar modelo<span class="chevron"></span>
                </li>
                <li data-target="#step3">
                    <span class="badge">3</span>Selecionar pessoas<span class="chevron"></span>
                </li>
                <li data-target="#step4">
                    <span class="badge">4</span>Escrita<span class="chevron"></span>
                </li>
                <li data-target="#step5">
                    <span class="badge">5</span>Confirmação<span class="chevron"></span>
                </li>
            </ul>
            <div class="actions">
                <button type="button" class="btn btn-sm btn-primary btn-prev" id="btn-voltar">
                    <i class="fa fa-arrow-left"></i>Voltar
                </button>
                <button type="button" class="btn btn-sm btn-success btn-next" id="btn-proximo" data-last="Finalizar">
                    Próximo<i class="fa fa-arrow-right"></i>
                </button>
            </div>
        </div>
        <div class="step-content">
            <form id="frm-wizard-ato" method="post">

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.IdCtaAcessoSist)
                @Html.HiddenFor(model => model.IdPrenotacao)
                @Html.HiddenFor(model => model.NumMatricula)
                @Html.HiddenFor(model => model.IdTipoAto)
                @Html.HiddenFor(model => model.PREIMO.SUBD)
                @Html.HiddenFor(model => model.PREIMO.TIPO)
                @Html.HiddenFor(model => model.PREIMO.TITULO)
                @Html.HiddenFor(model => model.IpLocal)

                @Html.Partial("_divWizardPasso1", Model)
                @Html.Partial("_divWizardPasso2", Model)

                <!-- passo 3----------------------------------------------------------------------------------------------------------->
                <div class="step-pane" id="step3">
                    <h3><strong>Etapa 3 </strong> - Selecionar pessoas</h3>
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Selecionar outorgante(s)/outorgado(s)</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary btn-lg" id="btn-pesq-pessoas">     selecionar     </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tbl-pessoas-selecionadas" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Tipo</th>
                                        <th>N° documento</th>
                                        <th>Nome</th>
                                        <th>Endereço</th>
                                        <th>Bairro</th>
                                        <th>Cidade</th>
                                        <th>UF</th>
                                        <th>CEP</th>
                                        <th>Telefone</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- APPEND JSON-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- passo 4----------------------------------------------------------------------------------------------------------->
                <div class="step-pane" id="step4">
                    <h3><strong>Step 4 </strong> - Wizard continued...</h3>
                    <br>
                    <br>
                    <h1 class="text-center text-danger"> This will be your Step 4 </h1>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>

                <!-- passo 5----------------------------------------------------------------------------------------------------------->
                <div class="step-pane" id="step5">
                    <h3><strong>Step 5 </strong> - Finalizar!</h3>
                    <br>
                    <br>
                    <h1 class="text-center text-success">
                        <i class="fa fa-check"></i> Congratulations!
                        <br>
                        <small>Click finish to end wizard</small>
                    </h1>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>
            </form>
        </div>
    </div>
</div>

