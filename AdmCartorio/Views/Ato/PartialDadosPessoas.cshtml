@model IEnumerable<AdmCartorio.ViewModels.DadosPessoaViewModel>

<div class="container" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h1>Dados das Pessoas</h1>
        </div>
        <div class="modal-body">
            <div class="hidden" id="divMsgPessoas">
                <div class="alert alert-danger">
                    <label class="" id="lblMsgPessoas">Por favor, selecione ao menos uma pessoa!</label>
                </div>
            </div>
            <table id="tblPartialPessoa" class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoDoc1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Numero1)
                        </th>
                        <th>
                            Utilizar?
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr id="@item.IdPessoa" data-bairro="@item.Bairro" data-CEP="@item.CEP" data-cidade="@item.Cidade" data-UF="@item.UF"
                                    data-telefone="@item.Telefone" data-tipodoc2="@item.TipoDoc2" data-numero2="@item.Numero2" data-tpPessoa="@item.TipoPessoa">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Endereco)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoDoc1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero1)
                                    </td>
                                    <td>
                                        <input class="" type="checkbox" name="ckUsar" value="" checked />
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button id="btnFecharPessoas"  type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>

            <button id="enviaInfoPessoa"
                    type="button" class="btn btn-primary">
                Salvar informações
            </button>
        </div>
    </div>
</div>
<script>

    $('#btnFecharPessoas').on('click', function () {
        LimparTabelaPessoas();
        DesabilitarProximo();
        $('#labelResp').text('Por favor, selecione algum participante!');
        $('#divResp').removeAttr('hidden');
        participantes = [];
    });


    $('#enviaInfoPessoa').on('click', function () {
        var elementos = $('#tblPartialPessoa > tbody > tr > td > input');
        var itens = [];
        
        debugger;
        for (var i = 0; i < elementos.length; i++) {
            if ($(elementos[i]).prop('checked')) {
                var linha = $(elementos[i]).closest('tr');
                itens.push(linha);
            }
        }
        debugger;
        if ($.isEmptyObject(itens)) {
            MostrarMensagemErro();
            LimparTabelaPessoas();
            participantes = [];
        } else {
            EsconderMensagemErro();
            LimparTabelaPessoas();
            while (!$.isEmptyObject(itens)) {
                var item = itens.pop();
                debugger;
                participantes.push(item);
                PreencherTabelaPessoas(item);
                $('#PartialDadosPessoas').modal('hide');
                console.log(participantes);  
            }
            HabilitarProximo();
            $('#divResp').attr('hidden');
        }
    });

    function MostrarMensagemErro() {
        $('#divMsgPessoas').removeClass('hidden');
    }
    function EsconderMensagemErro() {
        $('#divMsgPessoas').addClass('hidden');
    }
    function PreencherTabelaPessoas(item) {
        var tabela = $('#tblPessoas > tbody');
        var linha = '<tr>'+
                        '<td>' + $(item).data("tppessoa") + '</td>' +
                        '<td>' + $(item).children('td').get(0).innerText + '</td>' +
                        '<td>' + ($(item).data("bairro") ==  undefined ? "" : $(item).data("bairro")) + '</td>' +
                        '<td>' + ($(item).data("cidade") == undefined ? "" : $(item).data("cidade")) + '</td>' +
                        '<td>' + ($(item).data("UF") == undefined ? "" : $(item).data("UF")) + '</td>' +
                        '<td>' + ($(item).data("CEP") == undefined ? "" : $(item).data("CEP")) + '</td>' +
                        '<td>' + ($(item).data("telefone") == undefined ? "" : $(item).data("telefone"))+ '</td>' +
                        '<td>' + $(item).children('td').get(2).innerText + '</td>' +
                        '<td>' + $(item).children('td').get(3).innerText + '</td>' +
                        '<td>' + ($(item).data("tipodoc2") == undefined ? "" : $(item).data("tipodoc2")) + '</td>' +
                        '<td>' + ($(item).data("numero2") == undefined ? "" : $(item).data("numero2"))+ '</td>' +
                    '</tr>';
        $(tabela).append(linha);
    }

    function LimparTabelaPessoas() {
        var tabela = $('#tblPessoas > tbody > tr');
        for (var i = 0; i < tabela.length; i++) {
            tabela[i].remove();
        }
    }
</script>
